<h2>Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="title-input">Title</label>
            <input id="title-input" type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="published-after-input">Published After</label>
            <input id="published-after-input" type="date" name="publishedAfter"
                value="<%= searchOptions.publishedAfter %>">
        </div>
        <div class="form-item">
            <label for="published-before-input">Published Before</label>
            <input id="published-before-input" type="date" name="publishedBefore"
                value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<div>
    <% books.forEach(book=> { %>
        <a href="/books/<%= book.id %>">
            <img height="150" src="<%= book.coverImageSource %>" alt="Cover Image">
        </a>
        <% }) %>
</div>